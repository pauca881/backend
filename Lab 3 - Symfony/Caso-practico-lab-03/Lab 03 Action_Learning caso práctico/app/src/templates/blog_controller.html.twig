{% extends 'base.html.twig' %}

{% block title %}Lista de Publicaciones{% endblock %}

{% block body %}
    <h1>Lista de Publicaciones</h1>
    
    <ul>
        {% for post in posts %}
            <li>
                <h2>{{ post.title }}</h2>
                <p>{{ post.content }}</p>
                <p>Publicado el {{ post.createdAt|date('d/m/Y') }}</p>
            </li>
        {% endfor %}
    </ul>
    
    <a href="{{ path('blog_show', {'id': post.id}) }}">Ver detalles</a>
{% endblock %}